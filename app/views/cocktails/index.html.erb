<div class="container">
  <div class="justify-content-center d-flex align-items-center" style="margin-top: 30px">
    <button type="button" class="btn btn-light" style="padding: 30px 80px; color: #888888;"><%= link_to "Create your cocktail", new_cocktail_path %></button>
    <br><br>
  </div>
  <div class="cards">
    <% @cocktails.each do |cocktail|%>
     <% if cocktail.photo.attached?%>
     <div class="card-category" style="background-size: cover; background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url('<%= cl_image_path cocktail.photo.key, height: 300, width: 400, crop: :fill %>')"><%= link_to "#{cocktail.name}", "/cocktails/#{cocktail.id}" %>
      <% else %>
      <div class="card-category" style="background-size: cover; background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3))"><%= link_to "#{cocktail.name}", "/cocktails/#{cocktail.id}" %>
      <% end %>
  
</div>
<% end %>