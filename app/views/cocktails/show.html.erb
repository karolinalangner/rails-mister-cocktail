<div class="container">
  <div>
    <% if @cocktail.photo.attached? %>
    <%= cl_image_tag @cocktail.photo.key, height: 300, width: 400, crop: :fill %>
    <% else %>
    <p>No image attached</p>
    <% end %>
    <h2> <%= "#{@cocktail.name}" %></h2>

    <ul>
      <% @cocktail.doses.each do |dose| %>
        <li><%= dose.description%> <%= dose.ingredient.name %><small><%= link_to "❌", dose_path(dose), method: :delete %></small></li> 
      <% end %>
    </ul>
    <br><br><br>
  <div class="button-container">
    <button type="button" class="btn btn-light" style="padding: 20px 50px; color: black;"><span> <%= link_to "Add doses", new_cocktail_dose_path(@cocktail) %> </span></button><br> <br>
    <button type="button" class="btn btn-light" style="padding: 20px 50px; color: black;"><span> <%= link_to "Back to Cocktails", "/cocktails" %> </span> </button>
  </div>
  </div>
</div>